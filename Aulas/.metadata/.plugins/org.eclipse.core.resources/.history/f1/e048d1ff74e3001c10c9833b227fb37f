package condicional;

import java.util.Scanner;

public class Exercicio2 {

	public static void main(String[] args) {

		double renda;
		String alicota;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Insira a sua renda: ");
		renda = sc.nextDouble();
		
		if (renda <= 1903.98) {
			System.out.printf("\nSua renda de %.2f é isenta de imposto de renda", renda);
		} else if (renda < 2826.65) {
			alicota = "7,5%";
			System.out.printf("/nSua renda de %.2f terá dedução de R$ %.2f, que corresponde a %s de alícota", renda, renda * 0.925, alicota);
		}
		
		sc.close();

	}

}
